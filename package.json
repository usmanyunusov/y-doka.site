{
  "author": "Doka.Team",
  "license": "MIT + CC BY-NC-SA 4.0",
  "browserslist": [
    "last 2 version",
    "not dead",
    "not ie <= 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Y-Doka/y-doka.site"
  },
  "private": true,
  "scripts": {
    "sassWatch": "sass --watch src/assets/styles:dist/assets/styles",
    "sassBuild": "sass src/assets/styles/main.scss:dist/assets/styles/main.css && npm run cssPrefix",
    "cssPrefix": "postcss dist/assets/styles/main.css --use autoprefixer -d dist/assets/styles",
    "start": "npm-run-all dev --parallel sassWatch",
    "dev": "run-s clean eleventy:dev --print-label",
    "build": "run-s clean eleventy:prod --print-label",
    "eleventy:dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "eleventy:prod": "cross-env ELEVENTY_ENV=production eleventy",
    "clean": "del-cli dist",
    "editorconfig": "editorconfig-checker",
    "test": "npm run editorconfig"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "babel-loader": "^8.2.2",
    "clean-css": "^4.2.3",
    "critical": "^2.0.6",
    "cssesc": "^3.0.0",
    "del-cli": "^3.0.0",
    "focus-trap": "^6.2.2",
    "focus-visible": "^5.2.0",
    "html-minifier": "^4.0.0",
    "luxon": "^1.25.0",
    "markdown-it": "^12.0.2",
    "memfs": "^3.1.2",
    "node-sass": "^5.0.0",
    "outdent": "^0.7.1",
    "sass": "^1.29.0",
    "svg-sprite": "^1.5.0",
    "webpack": "^4.44.2"
  },
  "devDependencies": {
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "autoprefixer": "^10.1.0",
    "cross-env": "^7.0.3",
    "editorconfig-checker": "^3.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "markdown-it-anchor": "^6.0.1",
    "markdown-it-container": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
